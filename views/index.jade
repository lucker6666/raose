extends layout

block body
  nav(class='main-nav',ng-hide='hideNav')
    ul
      li(class='txt-center')
        img#avatar(class='avatar',width='60',height='60',ng-src='{{avatar}}',ng-init='avatar="img/avatar.png"')

      li
        a(href='/me')='Hi,'+user.username

      li(class=showWeeklyReport)
          a(href='/weeklyData') 数据周报

      li
        a(href='/datas') 数据源

      li
        a(href='/visitData') 其他数据

      li
        a(href='/docs') 文档

      // li 
        a(href='/topics') 讨论

      li
        a(href='/todos') Todo

      li
        a(href='/issues') Issue

      li
        a(href='/features') 需求

      li
        a(href='/files') 文件

      li 
        a(href='/settings') 设置

      li
        a(href='/deploy') 部署历史


  div(class='content',ng-view)
  script(src='js/jquery-1.10.2.min.js')
  script(src='js/hightchart/highcharts.js')
  script(src='js/lib/angular/angular.min.js')
  script(src='js/ui-bootstrap-0.6.0.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controller.min.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/angular-file-upload.js')
  script(src='js/lib.js')
  script(src='js/option.js')
  script(src='js/editor.js')

